{ 
  "targets": {
    "raspbian-jessie": {
      "buildenv": "raspbian-jessie",
      "builddeps": ["build-essential", "cmake", "make"],
      "environment": {
         "CXXFLAGS": "-std=c++11"
      },
      "buildcmd": [
      	"uname -a",
        "cat /etc/os-release",
        "g++ --version",
        "cd",
        "cmake . -DBUILD_TESTS=ON",
      	"cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
      ]
    },
    "xenial-armhf": {
      "buildenv": "xenial-armhf",
      "builddeps": ["build-essential", "cmake", "make"],
      "environment": {
         "CXXFLAGS": "-std=c++11"
      },
      "buildcmd": [
        "uname -a",
        "lsb_release -a",
        "g++ --version",
        "cd",
        "cmake . -DBUILD_TESTS=ON",
      	"cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
      ]
    },
    "centos7-x86_64": {
      "buildenv": "centos7-x86_64",
      "builddeps": ["gcc-c++", "cmake", "make"],
      "environment": {
         "CXXFLAGS": "-std=c++11 -Wall -g3"
      },
      "buildcmd": [
      	"uname -a",
        "rpm -q centos-release",
        "g++ --version",
      	"cd",
        "cmake . -DBUILD_TESTS=ON",
      	"cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
        ]        
    },
    "fedora24-x86_64": {
      "buildenv": "fedora24-x86_64",
      "builddeps": ["cmake", "make", "gcc gcc-c++"],
      "environment": {
         "CXXFLAGS": "-std=c++11 -Wall -g3"
      },
      "buildcmd": [
      	"uname -a",
        "cat /etc/fedora-release",
        "g++ --version",
        "cmake . -DBUILD_TESTS=ON",
      	"cmake --build . --target test_jsoncons",
        "cd tests",
        "./test_jsoncons;"
      ]
    }
  }
}
